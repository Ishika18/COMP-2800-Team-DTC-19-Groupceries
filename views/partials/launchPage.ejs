<link rel="stylesheet" type="text/css" href="/css/launchPageStyling.css">
<launchpage id="launchpage">
    <div class="container-fluid" id="logInSection"> 
        <div class="row">
            <div class="container-fluid" id="topbar">
                <div class="row" id="launchPageTop">
                    <div class="col align-items-center">
                        <img src="images/logo.png" class="col align-items-center" id="logoIcon">
                        <h2 id="appTitle">Groupceries</h2>
                        <div class="row justify-content-center mt-4" id="signInBox">
                            <div class="d-flex w-100 justify-content-center">
                                <div class="g-signin2" id="signIn" data-onsuccess="onSignIn" data-theme="dark"></div>
                            </div>
                            <button class="rectangularButton pagination-centered launchpageBtn" id="signOut" onclick={signOut()} style="display: none;">
                                Sign Out
                            </button>
                            <!-- buttons to go other pages -->

                            <form id="launchPageCreateBtn" action="/groceries/createListPage" method="get">
                                <button id="navBarCreate" class="rectangularButton pagination-centered d-inline launchpageBtn" type="submit">Create</button>
                            </form>
                            <form id="aboutUsLaunchPageBtn" action="/groceries/aboutUsPage" method="get">
                                <button id="AboutUsBtn" class="rectangularButton pagination-centered d-inline launchpageBtn">About Us</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="launchPageItems">
        <div class="container text-center mt-3 mb-3 align-items-center">
            <br>
            <div class="row d-flex justify-content-center">
                <div class="col-lg-4 mb-3">
                    <div class="card border border-dark h-100">
                        <img class="card-img-top rounded mx-auto w-50 launchpageImg" src="/images/merge.png" alt="Card image cap">
                        <div class="card-body">
                            <h2 class="card-title">All Your Items in One Place</h2>
                            <p class="card-text">Groupceries lets you merge grocery lists, making it easier to keep track of multiple lists.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 mb-3">
                    <div class="card border border-dark h-100">
                        <img class="card-img-top rounded mx-auto w-50 launchpageImg" src="/images/shopping.png" alt="Card image cap">
                        <div class="card-body">
                            <h2 class="card-title">Shopping Mode</h2>
                            <p class="card-text">Check items off the list as you shop to stay organized.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 mb-3">
                    <div class="card border border-dark h-100 launchpageImg">
                        <img class="card-img-top rounded mx-auto w-50" src="/images/phone.png" alt="Card image cap">
                        <div class="card-body">
                            <h2 class="card-title">Keeping You Connected</h2>
                            <p class="card-text">Easily call your friends from within the app.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            <div class="container mt-3" id="infoSlides">
               <div id="carouselExampleIndicators" class="carousel slide align-self-center mt-3" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/images/laptopmock.png" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/phonemock.png" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/phonemock2.png" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            </div>
        </div>
    </div>
</launchpage>
