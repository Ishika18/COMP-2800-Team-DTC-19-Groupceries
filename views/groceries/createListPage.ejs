<link rel="stylesheet" href="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css" />
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
<div class="container-fluid">
    <div class="row">
        <div class="container-fluid col" id="topbar">
            <%- include('../partials/mobileMainHeader.ejs'); -%>
            <%- include('../partials/appNavbar.ejs'); -%>
            <div class="col bg-light itemsArea">
                    <div class="col-lg-3" id="left">
                        <h3>Shopping Lists</h3><hr>
                        <div id="myLists">
                            <button id="createList"> Create New List</button><br>
                            <div><button id="myLists" class="btn collapsible">My Lists</button></div>
                            <section class="collapse">
                                    
                            </section>
                        </div>
                        <div id="friendLists">
                            <button id="friendLists" class="btn collapsible">Friends' Lists</button>
                            <div class="collapse" >
                               <div><ul class="collapsible"> Silvana's Lists</ul></div>
                               <section class="collapse">
                                <p class="listElement">List 1</p>
                               </section>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3" id="right">
                        <div id="rightDesktop">
                            <h3>List Actions</h3><hr><br>
                            <ul id="actionList">
                                <label id="readyToggle">Mark as Ready For Purchase
                                <input type="checkbox" data-role="flipswitch" name="flip-checkbox-2" id="flip-checkbox-2" data-on-text="Ready" data-off-text="Not Ready" data-wrapper-class="custom-size-flipswitch"><br>
                                </label>
                                <br>
                                <label id="shoppingToggle">Shopping Mode
                                <input type="checkbox" data-role="flipswitch" name="flip-checkbox-4" id="flip-checkbox-4" checked=""><br>
                                </label>
                                <br>
                                <label id="desktopMerge">Merge List</label>
                            </ul>
                        </div>
                        <div id="friend">
                            <button id="friendLists" class="btn collapsible">Friends' Lists</button>
                            <div class="collapse">
                                <ul id="shagun" class="collapsible">Shagun's Lists</ul>
                                    <p class="collapse">List 1</p>
                                <ul id="ronald" class="collapsible">Ronald's Lists</ul>
                                    <p class="collapse">List 1</p>
                                <ul id="eric" class="collapsible">Eric's Lists</ul>
                                    <p class="collapse">List 1</p>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6" id="middle">
                        <div id="listArea" class="itemsArea">
                            <div class="groceryList">
                                    <div id="buttons">
                                        <div class="d-flex addListBox">
                                            <div class="mr-auto p-2" id="listTitleSection"><p id="listTitle">My List</p></div>
                                            <div class="p-2 ml-auto rightMostButton"><button id="newItem" type="button" class="addButton">Add</button><button type="button" class="deleteButton" id="deleteButton">Delete</button>
                                        </div>
                                    </div>
                                    <details open id="myList" class="viewButton" text="View Grocery List">
                                        <summary class="viewListsbutton">View Grocery List</summary>
                                        <div id="groceryList">
                                        </div>
                                    </details>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row fixed-bottom" id="buttonFooter">
    <%- include('../partials/mobileMainButtons.ejs'); -%>
    <%- include('../partials/mobileNavBar.ejs'); -%>
</div>


